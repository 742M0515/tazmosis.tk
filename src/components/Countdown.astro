<countdown>
  <div id="countdown" class="countdown">
    <!-- <div class="time">
      <h2 class="text-gradient" id="years">00</h2>
      <small>years</small>
    </div> -->
    <div class="time">
      <h2 class="text-gradient" id="days">00</h2>
      <small>days</small>
    </div>
    <div class="time">
      <h2 class="text-gradient" id="hours">00</h2>
      <small>hours</small>
    </div>
    <div class="time">
      <h2 class="text-gradient" id="minutes">00</h2>
      <small>minutes</small>
    </div>
    <div class="time">
      <h2 class="text-gradient" id="seconds">00</h2>
      <small>seconds</small>
    </div>
  </div>
  <div class="hashtag">
    <small> #HBLD</small>
  </div>
</countdown>

<style>
  countdown {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-color: #ff00ff;
    border-width: 2px;
    border-radius: 5px;

    .text-container {
      width: auto;
      max-width: 100px;
      background-color: #000;

      & h1 {
        margin: 0;
        margin-bottom: 5px;
        font-weight: 600;
        line-height: 1.4;
        text-wrap: balance;
        text-align: center;
        transform: rotate(-5deg);
        .first-text {
          padding: 5px;
          font-size: 1.5rem;
          background-color: #20a4c5;
          color: #e0f7fa;
        }
      }
      & h2 {
        margin: 0;
        font-weight: 600;
        line-height: 1.4;
        text-wrap: balance;
        text-align: center;
        .second-text {
          padding: 5px;
          font-size: 1rem;
          background-color: #20a4c5;
          color: #e0f7fa;
        }
      }
    }
    .countdown {
      width: 100%;
      display: flex;
      justify-content: center;
      gap: 50px;
      .time {
        display: flex;
        flex-direction: column;
        align-items: center;
        & h2 {
          margin: 5px 0;
          font-size: 1.5rem;
        }
        & small {
          font-size: 1rem;
          font-weight: 500;
          text-transform: capitalize;
          color: #00ddff;
        }
      }
      .hashtag {
        display: flex;
        flex-direction: column;
        align-items: center;
        & h2 {
          font-size: 1.5rem;
        }
        & small {
          font-size: 1rem;
          font-weight: 500;
          text-transform: capitalize;
          color: #dbe2de;
        }
      }
    }
  }

  @media (max-width: 100px) {
    main {
      gap: 10px;
      .text-container {
        & h1 {
          .first-text {
            font-size: 2.8rem;
          }
        }
        & h2 {
          .second-text {
            font-size: 2rem;
          }
        }
      }
      .countdown {
        gap: 10px;
        .time {
          & h2 {
            margin: 0;
            font-size: 3.8rem;
          }
          & small {
            font-size: 1.1rem;
          }
        }
        .hashtag {
          & h2 {
            margin: 0;
            font-size: 1.1rem;
          }
          & small {
            font-size: 1.1rem;
          }
        }
      }
    }
  }

  .text-gradient {
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    background-image: linear-gradient(
      to left,
      #00ddff,
      #ff00ff,
      #00ddff,
      #ff00ff,
      #00ddff,
      #ff00ff
    );
    animation: color 8s linear infinite;
    background-size: 500%;
  }

  @keyframes color {
    0% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }

    100% {
      background-position: 0% 50%;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const years = document.getElementById("years");
    const days = document.getElementById("days");
    const hours = document.getElementById("hours");
    const minutes = document.getElementById("minutes");
    const seconds = document.getElementById("seconds");

    // target date
    const targetTime = new Date(`October 11 2025 00:00:00`);
    const currentTime = new Date();
    let diff = targetTime - currentTime;

    const updateCountdown = () => {
      const remainingYears = Math.max(
        Math.floor(diff / 1000 / 60 / 60 / 24 / 365)
      );
      const remainingDays = Math.max(Math.floor(diff / 1000 / 60 / 60 / 24));
      const remainingHours = Math.max(Math.floor(diff / 1000 / 60 / 60) % 24);
      const remainingMinutes = Math.max(Math.floor(diff / 1000 / 60) % 60);
      const remainingSeconds = Math.max(Math.floor(diff / 1000) % 60);

      if (
        // remainingYears === 0 &&
        remainingDays === 0 &&
        remainingHours === 0 &&
        remainingMinutes === 0 &&
        remainingSeconds === 0
      ) {
        callFireworks();
        clearInterval(countdownInterval);
        imageCountdown();
      }

      // years.innerHTML = remainingYears
      days.innerHTML = remainingDays;
      hours.innerHTML =
        remainingHours < 10 ? "0" + remainingHours : remainingHours;
      minutes.innerHTML =
        remainingMinutes < 10 ? "0" + remainingMinutes : remainingMinutes;
      seconds.innerHTML =
        remainingSeconds < 10 ? "0" + remainingSeconds : remainingSeconds;
    };

    const countdownInterval = setInterval(() => {
      updateCountdown();
      diff -= 1000;
      if (diff < 0) {
        diff = 0; // Asegura que diff no sea negativo
      }
    }, 1000);
  });
</script>
